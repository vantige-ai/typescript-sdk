{
  "name": "@vantige-ai/typescript-sdk",
  "version": "0.1.2",
  "description": "Official TypeScript SDK for Vantige AI's knowledge base querying API",
  "private": false,
  "author": "Eddie Hudson <eddie@vantige.ai>",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm",
    "build:types": "tsup src/index.ts --format cjs,esm --dts",
    "build:watch": "tsup src/index.ts --format cjs,esm --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "prepublishOnly": "yarn build:types && yarn test",
    "docs:start": "cd docs && yarn start",
    "docs:build": "cd docs && yarn build",
    "docs:serve": "cd docs && yarn serve",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "keywords": [
    "vantige",
    "ai",
    "sdk",
    "typescript",
    "knowledge-base",
    "rag",
    "chatbot",
    "enterprise"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vantige-ai/typescript-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/vantige-ai/typescript-sdk/issues"
  },
  "homepage": "https://github.com/vantige-ai/typescript-sdk#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
